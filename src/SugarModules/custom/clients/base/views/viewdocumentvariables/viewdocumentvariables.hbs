<style>
.popover{
  width: 360px;  
}
a:hover, a.hover {...}
a:active, a.active {...}
</style>
<div class="row-fluid" id="content" style="overflow-y: auto; overflow-x: hidden; background: #fff; padding: 1% 4%; margin-bottom: 100px; ">
  <div class="row-fluid control-group" >
    <div class="control-label offset5">
      <button class="btn close-drawer btn-primary" ><i class="icon-minus-sign fa fa-minus-circle"></i> Close</button>
    </div>        
  </div>
  <div class="title-section row-fluid record-panel-content">
    <h1> Signing Variables &nbsp; &nbsp; <i class="icon-question-sign fa fa-question-circle help" title="Use these variables to place your signing tags in your document. Click on a variable to copy to clipboard:"></i></h1>
  </div>
  <div class="row-fluid control-group">
    {{#each signingFields}}
        <div class="control-label span3" style="margin-left:0px;">          
          <p style="text-align: left;">
            <a href="#" data-module-variable="{{notation}}" class='copy-module-variable'>{{label}}</a>
          </p>
        </div>
    {{/each}}
  </div>

  <div class="title-section row-fluid record-panel-content" style="margin-top: 10px">
    <h1> Module Variables &nbsp; &nbsp; <i class="icon-question-sign fa fa-question-circle help" title="You can use module variables directly. Click on a variable to copy to clipboard:" data-content="{$fieldname}"></i></h1>    
  </div>
  <div class="row-fluid control-group">
    {{#each moduleFields}}
        <div class="control-label span3" style="margin-left:0px;">          
          <p style="text-align: left;">                    
            <a href="#" data-module-variable="{{notation}}" class='copy-module-variable'>{{label}}</a>
          </p>
        </div>                 
    {{/each}}
  </div>
  <div class="title-section row-fluid record-panel-content">
    <h1> Current User &nbsp; &nbsp; <i class="icon-question-sign fa fa-question-circle help" title="You can use module variables directly. Click on a variable to copy to clipboard:" data-content="{$fieldname}"></i></h1>
  </div>
  <div class="row-fluid control-group">
    {{#each currentUserFields}}
        <div class="control-label span3" style="margin-left:0px;">          
          <p style="text-align: left;">
            <a href="#" data-module-variable="{{notation}}" class='copy-module-variable'>{{label}}</a>
          </p>
        </div>
    {{/each}}
  </div>
  <div class="title-section row-fluid record-panel-content">
    <h1> Related Variables &nbsp; &nbsp; <i class="icon-question-sign fa fa-question-circle help" title="You can use related variables directly:" data-content="{$relatefield_fieldname}"></i></h1>
    {{#each this.relateFields}}
    <div class="control-label span11 moduleName" data-variable-type="related-variable" style="margin: 0; padding: 10px 20px; border-top: 1px solid white; border-bottom: 1px solid #dcdcdc; background: #f8f8f8; ">          
      <p style="margin: 0px;"><i class="icon-plus-sign fa fa-plus" style="margin-right: 10px"></i>{{label}}</p>
    </div>
    <div class="span11" style="display: none; padding: 10px 0;">
      {{#each this.fields}}
      <div class="span3" style="margin-left: 0px;">
        <a href="#" data-module-variable="{{notation}}" class='copy-related-variable'>{{label}}</a>
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>    
  <div class="title-section row-fluid record-panel-content">
    <h1> Related Module Variables &nbsp; &nbsp; <i class="icon-question-sign fa fa-question-circle help" title="Select the fields you wanted to include in your iteration. An example of a for loop in a html document in webmerge is:" data-content="{foreach from=$contacts item=_contact}

    Name: {$_contact.name}
    Email:{$_contact.email1}
    {/foreach}"></i></h1>
    {{#each this.relateModules}}
    <div class="control-label span11 moduleName" data-variable-type="related-module-variable" data-parent-module="${{@key}}" style="margin: 0; padding: 10px 20px; border-top: 1px solid white; border-bottom: 1px solid #dcdcdc; background: #f8f8f8; ">          
      <p style="margin: 0px;" ><i class="icon-plus-sign fa fa-plus"style="margin-right: 10px"></i>&nbsp; {{label}}</p>
    </div>
    <div class="span11" style="display: none; padding: 10px 0;">
      {{#each this.fields}}
      <div class="span3" style="margin-left: 0px;">
        <input type='checkbox' class='check-related-module-variable' data-label-name="{{label}}" data-parent-variable="{{notation}}" /> {{label}}
      </div>      
      {{/each}}
      <div class='span11' style="text-align: center">
        <button class="btn btn-primary copy-related-module-variable-btn" ><i class="icon-copy fa fa-copy"></i> Copy Selected Variables</button>
      </div>
    </div>
    {{/each}}
  </div>    
  <div class="row-fluid control-group" >
    <div class="control-label span4" style="text-align: left">                
    </div> 
  </div>
  <div class="row-fluid control-group" >
    <div class="control-label offset5">
      <button class="btn close-drawer btn-primary" ><i class="icon-minus-sign fa fa-minus-circle"></i> Close</button>
    </div>    
    <script>
    $('.help').popover()
    </script>
  </div>
</div>